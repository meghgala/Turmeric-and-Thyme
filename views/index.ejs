    <script>

        

        async function loadRecipe(recipeId) {
        try {
            // Redirect to the recipeblog page with the recipe ID as a query parameter
            window.location.href = '/recipeblog?recipeId=' + recipeId;
        } catch (error) {
            console.error('Error:', error);
        }
    }
        const form = document.querySelector('form[name="search_input"]')
        form.addEventListener('submit',async (e) => {
        e.preventDefault();
        // get values
        const searchword_html = form.searchBox.value;
            window.location.href = '/searched?searchword_html=' + searchword_html;
        })
