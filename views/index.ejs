    <section class="banner" id="top">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="banner-caption">
                        <% if (userid) { %>
                            <h2>Recipes for <%= userinfo.username %></h2>
                        <% } else { %>
                            <h2>Best Recipes For All</h2>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
<!----------------------------------------------Click here for a random recommendation---------------------------------------------------------->
<section class="popular-places" id="popular">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <span style="font-family: 'Signika', 'sans-serif'; color: #0e6e1a;">Search Here</span>
                </div>
            </div> 
        </div> 
        <div class="container">
            <form name="search_input">
                <div class="row justify-content-center">
                    <div class="col-md-2"></div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <input type="text" class="search-box" id="searchBox" placeholder="Ingredient or dish">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <button type="submit" class="search-button" id="searchBtn" style="font-family: 'Signika', 'sans-serif';">Search</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <p class="or-caption" style="font-family: 'Signika', 'sans-serif'; color: #0e6e1a;">- OR -</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="text-center">
                        <button type="button" onclick="loadRecipe('<%= recipes[Math.floor(Math.random() * recipes.length)]._id %>')" class="search-button" style="font-family: 'Signika', 'sans-serif';">Click me for a random recipe</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

<!-----------------------------------------------------Featured Recipes---------------------------------------------------------------------->

    <section class="featured-recipes" style="background-image: url('/img/1.png');" id="blog">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <span style="font-family: 'Signika', 'sans-serif'; color: #0e6e1a; margin-top: 5em;">Featured recipes</span>
                    </div>
                </div> 
            </div> 
            <div class="row" id="recipeCardsContainer">
                <% recipes.slice(0, 3).forEach(function(recipe) { %>
                    <div class="col-md-4 col-sm-6 col-xs-12 p-4">
                        <div class="featured-item">
                            <div class="thumb">
                                <img src="<%= recipe.imageURL %>" alt="">
                            </div>
                            <div class="down-content">
                                <h4><%= recipe.recipeTitle %></h4>
                                <span><%= recipe.category %></span>
                                <p class="recipe-description"><%= recipe.recipeDescription %></p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="text-button">
                                            <a href="#" onclick="loadRecipe('<%= recipe._id%>')">Continue Reading</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

