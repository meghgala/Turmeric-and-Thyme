    <script type="text/javascript">
        // Add more ingredient fields
        $('#addIngredient').click(function () {
            $('#ingredientsContainer').append('<input type="text" class="form-control mb-2" placeholder="Ingredient">');
        });

        // Add more step fields
        $('#addStep').click(function () {
            $('#stepsContainer').append('<input type="text" class="form-control mb-2" placeholder="Step">');
        });
    </script>
